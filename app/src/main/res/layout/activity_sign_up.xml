<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@color/novoda_blue_light"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.novoda.frankboylan.meetingseating.CreateAccountActivity">

  <EditText
    android:id="@+id/et_new_firstname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:ems="10"
    android:hint="Firstname"
    android:inputType="textCapSentences"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.503"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.100000024" />

  <EditText
    android:id="@+id/et_new_surname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textCapSentences"
    android:hint="Surname"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/et_new_firstname"
    android:layout_marginRight="0dp"
    app:layout_constraintRight_toRightOf="@+id/et_new_firstname"
    android:layout_marginLeft="0dp"
    app:layout_constraintLeft_toLeftOf="@+id/et_new_firstname"
    app:layout_constraintHorizontal_bias="0.0" />

  <EditText
    android:id="@+id/et_new_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:hint="Email"
    android:inputType="textEmailAddress"
    app:layout_constraintLeft_toLeftOf="@+id/et_new_firstname"
    app:layout_constraintRight_toRightOf="@+id/et_new_firstname"
    app:layout_constraintTop_toBottomOf="@+id/et_new_surname" />

  <EditText
    android:id="@+id/et_new_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:hint="Password"
    android:inputType="textPassword"
    app:layout_constraintLeft_toLeftOf="@+id/et_new_firstname"
    app:layout_constraintRight_toRightOf="@+id/et_new_firstname"
    app:layout_constraintTop_toBottomOf="@+id/et_new_email" />

  <Button
    android:id="@+id/button8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:text="CREATE"
    android:onClick="handlerCreateAccountSubmit"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_new_password"
    app:layout_constraintVertical_bias="0.25" />
</android.support.constraint.ConstraintLayout>
